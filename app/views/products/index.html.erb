<div class="container">
  <div class="row">
    <div class="box promo">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">
            <strong><%= @category %></strong>
        </h2>
        <hr>
      </div>
      <% unless @category == "youth" %>
        <%= render "search_form" %>
        <div class="col-md-10 products">

      <% else %>
        <div class="col-md-12 products">
      <% end %>
        <% if @products.length > 0 %>
          <% @products.each do |product| %>
            <%= link_to(product_path(product)) do %>
              <div class="col-lg-4 product">
                <div class="safe-zone">
                  <div class="image" style="background: url('<%= product.image %>'); background-size: cover; background-position: center center;"></div>
                </div>
                <div class="info">
                  <p><%= product.name %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <h1>Sorry, no products match those criteria</h1>
        <% end %>
        <div class="clearfix"></div>
        <%= render "pagination" %>
      </div>
    </div>
  </div>
</div>
