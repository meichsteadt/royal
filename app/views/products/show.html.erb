<div class="container">
  <div class="row">
    <div class="box">
        <div class="col-md-6">
          <% if @product.images && @product.images.length > 1 %>
          <div id="product-carousel" class="carousel slide" style="margin-top: 20px">
            <!-- Indicators -->
            <ol class="carousel-indicators hidden-xs">
              <% @product.images.each_with_index do |image, index| %>
                <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" <% if index == 0 %> class="active" <% end %>></li>
              <% end %>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <% @product.images.each_with_index do |image, index| %>
                <% if index == 0 %>
                <div class="item active">
                  <img class="" src="<%= image %>" alt="">
                </div>
                <% else %>
                <div class="item">
                  <img class="" src="<%= image %>" alt="">
                </div>
                <% end %>
              <% end %>
            </div>
            <a class="left carousel-control" href="#product-carousel" data-slide="prev">
              <span class="icon-prev"></span>
            </a>
            <a class="right carousel-control" href="#product-carousel" data-slide="next">
              <span class="icon-next"></span>
            </a>
          </div>
        <% else %>
          <img id="productImage" class="img-responsive product-img shadow" src="<%= @product.thumbnail %>">
        <% end %>
      </div>
    </div>
    <div class="col-md-6 text-center">
      <h2><%= @product.name %></h2>
      <p><%= @product.description %></p>
      <br>
      <p><em>Unfortunately we do not have prices available right now. Please call us at <%= Store.first.phone %> and we would be happy to help you.</em></p>
      <!-- <div class="price">
        <h1><%= number_to_currency(@product.price, precision: 0) %></h1>
        <% if @product.sale %>
        <h3 class="sale">$349</h3>
        <% end %>
      </div> -->
    </div>
    <div class="clearfix"></div>
    <br>
  </div>
</div>

<script>
$('.carousel').carousel({
    interval: 000 //changes the speed
})
</script>
